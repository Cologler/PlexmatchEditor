<Window x:Class="PlexmatchEditor.Windows.EditEpisodeRangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlexmatchEditor.Windows"
        xmlns:c="clr-namespace:PlexmatchEditor.Controls"
        mc:Ignorable="d"
        Title="Edit Episode Range"
        Height="190"
        Width="260"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <c:EpisodeRangeControl />

        <Grid Grid.Row="1"
              Margin="0,4,0,0"
              HorizontalAlignment="Right">
            <Button Content="Save"
                    Click="SaveButton_Click" />
        </Grid>
    </Grid>
</Window>
